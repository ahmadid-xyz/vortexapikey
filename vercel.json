{
 "version": 2,
 "builds": [
 {
 "src": "index.js",
 "use": "@vercel/node"
 }
 ],
 "routes": [
 {
 "src": "/api/(.*)",
 "dest": "/index.js"
 },
 {
 "src": "/",
 "dest": "/index.js" // Pastikan root request diarahkan ke index.js
 },
 {
 "src": "/dashboard",
 "dest": "/index.js" // Permintaan ke /dashboard juga akan diarahkan ke index.js
 },
 {
 "src": "/(.*)",
 "dest": "/public/$1" // Menangani file statis di dalam folder public
 }
 ]
}